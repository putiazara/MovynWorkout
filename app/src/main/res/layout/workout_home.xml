<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/workout_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:fontFamily="@font/qsbold"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/horizontalscroll"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:layout_constraintTop_toBottomOf="@id/workout_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/imagecard"
                            android:layout_width="300dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/sereal"
                            android:orientation="horizontal" />

                        <TextView
                            android:id="@+id/sereal"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imagecard"
                            android:textAlignment="center"
                            android:fontFamily="@font/qsbold"
                            android:textColor="@color/brown"
                            android:text="Sereal and Milk Cream"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:layout_below="@+id/sereal"
                            android:fontFamily="@font/qsbold"
                            android:text="@string/sereal"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/imagecard2"
                            android:orientation="horizontal"
                            android:layout_width="300dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/fastfood"/>

                        <TextView
                            android:id="@+id/fastfood"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imagecard2"
                            android:textColor="@color/brown"
                            android:fontFamily="@font/qsbold"
                            android:textAlignment="center"
                            android:text="Fast Food"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:layout_below="@+id/fastfood"
                            android:fontFamily="@font/qsbold"
                            android:text="@string/fastfood"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/imagecard3"
                            android:orientation="horizontal"
                            android:layout_width="300dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/jam2"/>

                        <TextView
                            android:id="@+id/besttime"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imagecard3"
                            android:fontFamily="@font/qsbold"
                            android:textAlignment="center"
                            android:textColor="@color/brown"
                            android:text="Best Time Training"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:fontFamily="@font/qsbold"
                            android:layout_below="@+id/besttime"
                            android:text="@string/besttime"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/workout_benefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Benefits"
            android:fontFamily="@font/qsbold"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalscroll"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/workout_benefits"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imagecardvertical"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/heart"/>

                        <TextView
                            android:id="@+id/judulbenefits"
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/qsbold"
                            android:layout_height="match_parent"
                            android:textColor="@color/brown"
                            android:layout_toRightOf="@id/imagecardvertical"
                            android:text="Prevent heart disease and stroke"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:fontFamily="@font/qsbold"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/judulbenefits"
                            android:layout_toRightOf="@id/imagecardvertical"
                            android:text="@string/prevent"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imagecardvertical2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/weight"/>

                        <TextView
                            android:id="@+id/judulbenefits2"
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/qsbold"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown"
                            android:layout_toRightOf="@id/imagecardvertical2"
                            android:text="Maintain ideal body weight"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/qsbold"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_below="@id/judulbenefits2"
                            android:layout_toRightOf="@id/imagecardvertical2"
                            android:text="@string/maintain"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imagecardvertical3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/bone"/>

                        <TextView
                            android:id="@+id/judulbenefits3"
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/qsbold"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown"
                            android:layout_toRightOf="@id/imagecardvertical3"
                            android:text="Reducing the risk of developing osteoporosis"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/qsbold"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_below="@id/judulbenefits3"
                            android:layout_toRightOf="@id/imagecardvertical3"
                            android:text="@string/reducing"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imagecardvertical4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/self"/>

                        <TextView
                            android:id="@+id/judulbenefits4"
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/qsbold"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown"
                            android:layout_toRightOf="@id/imagecardvertical4"
                            android:text="Faster self-confidence"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/qsbold"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_below="@id/judulbenefits4"
                            android:layout_toRightOf="@id/imagecardvertical4"
                            android:text="@string/ideal"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imagecardvertical5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/sleep"/>

                        <TextView
                            android:id="@+id/judulbenefits5"
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/qsbold"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown"
                            android:layout_toRightOf="@id/imagecardvertical5"
                            android:text="Make sleep better"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/qsbold"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_below="@id/judulbenefits5"
                            android:layout_toRightOf="@id/imagecardvertical5"
                            android:text="@string/sleep"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>