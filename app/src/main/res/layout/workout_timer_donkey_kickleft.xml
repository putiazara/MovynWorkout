<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workout_timer_donkey_kickleft"
    android:background="@color/brown">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:gravity="center_horizontal|center_vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/donkeykickleft"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bulatt"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/bulat"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="100dp"
            android:textColor="@color/black"
            android:fontFamily="@font/qsbold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sc"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/timer"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:fontFamily="@font/qsbold"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_card3"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/transparent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donkey Kick Left 12x"
                android:textStyle="bold"
                android:fontFamily="@font/qsbold"
                android:textColor="@color/black"
                android:id="@+id/txt"
                android:textSize="20dp"
                android:gravity="center"
                />

            <androidx.drawerlayout.widget.DrawerLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                android:backgroundTint="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />

            <androidx.drawerlayout.widget.DrawerLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                android:backgroundTint="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>